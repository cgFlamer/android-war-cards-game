<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.AppCompat.Light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_material_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gcioropina.jocrazboi.ProfilesActivity" >

    <TextView
        android:id="@+id/textViewProfilesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/saved_profiles_delete"
        android:textColor="@color/green_playing_table"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/noCardsTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewProfilesTitle"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/no_saved_profiles"
        android:textColor="@color/card_bg_color"
        android:textColorLink="@color/color_spades" />

    <ListView
        android:id="@+id/profilesListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noCardsTextView"
        android:layout_marginTop="29dp" >
    </ListView>

</RelativeLayout>
